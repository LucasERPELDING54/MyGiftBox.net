{% extends "gift.main.twig" %}

{% block title %}Création de coffret{% endblock %}

{% block content %}

    <head>
        <link rel="stylesheet" href="{{ base_path() }}/css/box-style.css">
    </head>
        
    <form method="post" action="recapBox">
        <div>
            <label for="nom">Nom du coffret :</label>
            <input type="text" id="nom" name="nom" required>
        </div>
        <div>
            <label for="description">Description du coffret :</label>
            <textarea id="description" name="description" required></textarea>
        </div>
        <div>
            <label for="cadeau">Cadeau :</label>
            <input type="checkbox" id="cadeau" name="cadeau">
        </div>
        <div>
            <label for="messageCadeau">Message en cas de cadeau :</label>
            <textarea id="messageCadeau" name="messageCadeau"></textarea>
        </div>
        <input type="hidden" name="csrf" value="{{ csrf }}">
        <input type="submit" name="Creercoffret" value="Créer le coffret">
    </form>
{% endblock %}
